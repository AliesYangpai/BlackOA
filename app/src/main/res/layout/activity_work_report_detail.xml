<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_all"
    tools:context="com.blackcoffee.work.ui.activity.WorkReportDetailActivity">

    <!--标题-->
    <include
        android:id="@+id/include_title_work_report_detai"
        layout="@layout/title_bar_aty_center_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/include_title_work_report_detai"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!--<com.blackcoffee.work.ui.widget.cirlceimageview.CircleImageView-->
                    <!--android:id="@+id/civ_user_head"-->
                    <!--android:layout_width="35dp"-->
                    <!--android:layout_height="35dp"-->
                    <!--android:src="@drawable/img_contact_bg" />-->


                <TextView
                    android:id="@+id/tv_report_type"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="D"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:background="@drawable/shape_orange_bg"
                    />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Slim Shady"
                        android:textColor="@color/black_text" />

                    <TextView
                        android:id="@+id/tv_create_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="2018-05-07 19:26"
                        android:textColor="@color/gray6"
                        android:textSize="12sp" />

                </LinearLayout>


            </LinearLayout>



            <!--已完成的工作-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/finished_work"
                    android:textSize="16sp"
                    android:textColor="@color/black_text" />


                <TextView
                    android:id="@+id/tv_finished_work"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today's work"
                    android:textColor="@color/gray6"
                    android:layout_marginTop="10dp"
                    />
                
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_all"
                    android:layout_marginTop="10dp"
                    />


            </LinearLayout>

            <!--未完成的工作-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/unfinished_work"
                    android:textSize="16sp"
                    android:textColor="@color/black_text" />


                <TextView
                    android:id="@+id/tv_unfinished_work"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today's work"
                    android:textColor="@color/gray6"
                    android:layout_marginTop="10dp"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_all"
                    android:layout_marginTop="10dp"
                    />


            </LinearLayout>
            <!--需要协调的工作-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/coordinate_work"
                    android:textSize="16sp"
                    android:textColor="@color/black_text" />


                <TextView
                    android:id="@+id/tv_coordinate_work"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today's work"
                    android:textColor="@color/gray6"
                    android:layout_marginTop="10dp"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_all"
                    android:layout_marginTop="10dp"
                    />


            </LinearLayout>


            <!--备注-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/remark"
                    android:textColor="@color/black_text"
                    android:textSize="16sp"
                    />


                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today's work"
                    android:textColor="@color/gray6"
                    android:layout_marginTop="10dp"
                    />





            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</RelativeLayout>
