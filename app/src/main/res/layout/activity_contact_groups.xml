<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
tools:context="com.blackcoffee.work.ui.activity.ContactGroupsActivity">



<!--标题-->
<include
    android:id="@+id/include_title_group_contacts"
    layout="@layout/title_bar_aty_all_right_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />



<include
    android:id="@+id/include_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    layout="@layout/include_title_search"
    android:layout_below="@id/include_title_group_contacts"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    />



    <android.support.design.widget.TabLayout
        android:id="@+id/tl_group"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/include_search"
        app:tabSelectedTextColor="@color/qhy_blue"
        app:tabIndicatorColor="@color/qhy_blue"
        android:background="@drawable/img_bg_work_bar"
        />





    <FrameLayout
        android:id="@+id/fragment_container_contact_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tl_group"
        />



</RelativeLayout>
