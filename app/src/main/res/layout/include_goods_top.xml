<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >



    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >



        <!--物品用途-->
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >


            <LinearLayout
                android:id="@+id/ll_goods_use_way"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/black_text"
                    android:gravity="center_vertical"
                    android:text="@string/goods_use_way"
                    />





            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_edit_goods_user_way"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/ll_goods_use_way"
                android:layout_marginLeft="10dp"

                >

                <EditText
                    android:id="@+id/et_goods_purpose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_goods_use_way"
                    android:lineSpacingExtra="3dp"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/text_grays"
                    android:textSize="15sp" />



            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/bg_all"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>


        <!--物品名称-->
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >


            <LinearLayout
                android:id="@+id/ll_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/black_text"
                    android:gravity="center_vertical"
                    android:text="@string/goods_name"
                    />





            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/ll_goods_name"
                android:layout_marginLeft="10dp"

                >

                <EditText
                    android:id="@+id/et_goods_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_goods_name"
                    android:lineSpacingExtra="3dp"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/text_grays"
                    android:textSize="15sp" />



            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/bg_all"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>



        <!--开始时间-->
        <RelativeLayout
            android:id="@+id/rl_start_time"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >


            <LinearLayout
                android:id="@+id/ll_start_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/black_text"
                    android:gravity="center_vertical"
                    android:text="@string/take_break_start_time"
                    />







            </LinearLayout>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/ll_start_time"
                android:layout_marginLeft="10dp"
                >




                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/black_text"
                    android:gravity="center_vertical"
                    />




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/gray6"
                        android:gravity="center_vertical"
                        android:text="@string/please_select"
                        android:textSize="13sp"
                        />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/img_arrow_gray_small"
                        android:layout_marginLeft="10dp"
                        />


                </LinearLayout>

            </RelativeLayout>





            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/bg_all"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>


        <!--结束时间-->
        <RelativeLayout
            android:id="@+id/rl_end_time"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >


            <LinearLayout
                android:id="@+id/ll_end_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/black_text"
                    android:gravity="center_vertical"
                    android:text="@string/take_break_end_time"
                    />





            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/ll_end_time"
                android:layout_marginLeft="10dp"
                >




                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/black_text"
                    android:gravity="center_vertical"
                    />




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    >

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/gray6"
                        android:gravity="center_vertical"
                        android:text="@string/please_select"
                        android:textSize="13sp"
                        />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/img_arrow_gray_small"
                        android:layout_marginLeft="10dp"
                        />


                </LinearLayout>

            </RelativeLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/bg_all"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>



    </LinearLayout>


</LinearLayout>








