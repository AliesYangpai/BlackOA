<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        
        


        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            >


            <TextView
                android:id="@+id/tv_stander_work_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray6"
                android:text="work_time 09:00"
                android:textSize="13sp"
                />

            <TextView
                android:id="@+id/tv_check_in_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text"
                android:text = "mornging worktime:  09:28"
                />
            

        </LinearLayout>

        <TextView
            android:id="@+id/tv_check_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:text="out"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:background="@drawable/boder_bg_green_radius_2"
            android:layout_toRightOf="@id/ll_left"
            android:layout_centerVertical="true"
            />

        
        <TextView
            android:id="@+id/tv_check_in_remedy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:textSize="14sp"
            android:text="@string/apply_for_check_in_remedy"
            android:background="@drawable/selector_blue_bg"
            />

        


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_all"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

</LinearLayout>
























