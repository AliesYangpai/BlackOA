<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_all"
    tools:context="com.blackcoffee.work.ui.activity.WorkApproveDetialActivity">

    <!--标题-->
    <include
        android:id="@+id/include_title_work_approve_detail"
        layout="@layout/title_bar_aty_center_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/include_title_work_approve_detail"
        android:layout_marginTop="10dp"
        android:scrollbars="none">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



           <!--上半-->
            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >

            <!--头像相关-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"

                >

                <com.blackcoffee.work.ui.widget.cirlceimageview.CircleImageView
                    android:id="@+id/civ_approver_head_top"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/img_contact_bg" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_approver_name_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Slim Shady"
                        android:textColor="@color/black_text" />

                    <TextView
                        android:id="@+id/tv_statue_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Access"
                        android:textColor="@color/gray6"
                        android:textSize="12sp" />

                </LinearLayout>


            </LinearLayout>



            <!--申请item类型-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >



                <TextView
                    android:id="@+id/tv_key_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Business Place"
                    android:textColor="@color/gray6" />

                <TextView
                    android:id="@+id/tv_value_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Slim Shady "
                    android:textColor="@color/black_text"
                    android:layout_marginLeft="10dp"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"


                >



                <TextView
                    android:id="@+id/tv_key_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Business Place"
                    android:textColor="@color/gray6" />

                <TextView
                    android:id="@+id/tv_value_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Slim Shady "
                    android:textColor="@color/black_text"
                    android:layout_marginLeft="10dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"

                >



                <TextView
                    android:id="@+id/tv_key_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Business Place"
                    android:textColor="@color/gray6" />

                <TextView
                    android:id="@+id/tv_value_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Slim Shady "
                    android:textColor="@color/black_text"
                    android:layout_marginLeft="10dp"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"

                >



                <TextView
                    android:id="@+id/tv_key_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Business Place"
                    android:textColor="@color/gray6" />

                <TextView
                    android:id="@+id/tv_value_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Slim Shady "
                    android:textColor="@color/black_text"
                    android:layout_marginLeft="10dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"


                >



                <TextView
                    android:id="@+id/tv_key_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Business Place"
                    android:textColor="@color/gray6" />

                <TextView
                    android:id="@+id/tv_value_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Slim Shady "
                    android:textColor="@color/black_text"
                    android:layout_marginTop="10dp"
                    />


            </LinearLayout>


            </LinearLayout>

            <!--发起人和处理人布局-->

            <ImageView
                android:id="@+id/iv_approve_statue"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/test_img_access"
                />





            <!--我-->
            <RelativeLayout
                android:id="@+id/rl_me"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/ll_top"
                >

                <com.blackcoffee.work.ui.widget.cirlceimageview.CircleImageView

                    android:id="@+id/civ_my_head"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/img_contact_bg"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/tv_my_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Slim Shady"
                    android:textColor="@color/black_text"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/civ_my_head"
                    android:layout_marginLeft="10dp"
                    />



                <TextView
                    android:id="@+id/tv_send_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="2018-05-07 19:26"
                    android:textColor="@color/gray6"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>


            <!--操作人-->
            <RelativeLayout
                android:id="@+id/rl_approver"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_below="@id/rl_me"
                >

                <com.blackcoffee.work.ui.widget.cirlceimageview.CircleImageView

                    android:id="@+id/civ_approver_head_bottom"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/img_contact_bg"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/tv_approver_name_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Slim Shady"
                    android:textColor="@color/black_text"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/civ_approver_head_bottom"
                    android:layout_marginLeft="10dp"
                    />


                <TextView
                    android:id="@+id/tv_statue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Deny"
                    android:textColor="@color/red"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_approver_name_bottom"
                    android:layout_marginLeft="10dp"
                    />



                <TextView
                    android:id="@+id/tv_approve_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="2018-05-07 19:26"
                    android:textColor="@color/gray6"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>





        </RelativeLayout>


    </ScrollView>


</RelativeLayout>






























































