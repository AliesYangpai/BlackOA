<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/fl_identify_area"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_blue_bg"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_bottom_left"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/img_white_msg_icon" />


            <TextView
                android:id="@+id/tv_bottom_left"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/do_send_msg"
                android:layout_marginLeft="5dp"
                />




        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/fl_identify_area"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_blue_bg"
            android:gravity="center">


            <ImageView
                android:id="@+id/iv_bottom_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/img_white_call_icon" />


            <TextView
                android:id="@+id/tv_bottom_right"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/do_call"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>








