<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        >





       <!--顶部title描述-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <com.blackcoffee.work.ui.widget.cirlceimageview.CircleImageView
                android:id="@+id/civ_user_head"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@color/blue_bottom_circle"
                />


            <TextView
                android:id="@+id/tv_work_approve_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Work report"
                android:textColor="@color/gray6"
                android:textStyle="bold"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/tv_work_approve_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="'s approve"
                android:textColor="@color/black_text"
                android:textStyle="bold"
                android:textSize="15sp"
                />

        </LinearLayout>


        <!--中间文本描述-->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginTop="10dp"
          android:background="@color/bg_all"
          android:padding="10dp"
          android:gravity="center_vertical"
          >



          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
              <TextView
                  android:id="@+id/tv_work_approve_info_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Examination and approval items"
                  android:textColor="@color/black_text"
                  android:textSize="15sp"
                  />



              <TextView
                  android:id="@+id/tv_work_approve_info_type"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="(item)"
                  android:textColor="@color/gray6"
                  android:layout_marginLeft="5dp"
                  android:textSize="13sp"
                  android:gravity="center_vertical"
                  />

          </LinearLayout>






          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="5dp"
              >
              <TextView
                  android:id="@+id/tv_work_approve_info"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="I have finish all of the work include Ui,Server,and Pc controler"
                  android:singleLine="true"
                  android:textColor="@color/gray6"
                  />


          </LinearLayout>






      </LinearLayout>



        <TextView
            android:id="@+id/tv_approve_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray6"
            android:text="2018/5/27 15:29"
            android:textSize="13sp"
            />







    </LinearLayout>


   <View
       android:layout_width="match_parent"
       android:layout_height="5dp"
       android:background="@color/bg_all"
       />




</LinearLayout>