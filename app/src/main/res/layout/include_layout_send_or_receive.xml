<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




    <RadioGroup
        android:id="@+id/rg_recharge_consume"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        >

        <RadioButton
            android:id="@+id/rb_receive"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/my_receive"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@drawable/selector_text_blue_white"
            android:background="@drawable/selector_bg_blue_white_left"
            />


        <RadioButton
            android:id="@+id/rb_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/my_sending"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@drawable/selector_text_blue_white"
            android:background="@drawable/selector_bg_blue_white_right"
            />

    </RadioGroup>

</LinearLayout>